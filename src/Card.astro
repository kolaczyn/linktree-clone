---
import { appConfig } from "../config";
import Link from "./components/link/Link.astro";
---

<h1>{appConfig.username}</h1>
<h2>{appConfig.about}</h2>
<hr />
{appConfig.links.map((x) => <Link {...x} />)}

<style>
  h1 {
    text-align: center;
    font-weight: bold;
  }

  h2 {
    text-align: center;
    font-weight: lighter;
  }

  .link {
    display: block;
  }

  hr {
    height: 1px;
    border: none;
    background-color: rgba(255, 255, 255, 0.25);
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
</style>
